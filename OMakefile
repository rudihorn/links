DEFAULT_FILES[] = 
	$(FILES)
	links

UNIT_FILES[] = 
	$(FILES)
	unitTests
	unitTestsLensFDHelpers
	unitTestsJson

DEFAULT_PROGRAM = links
UNIT_PROGRAM = links_unit

#OCAML_LIBS +=unix.cma

# OCAML_CLIBS +=
# OCAML_OTHER_LIBS +=
# OCAML_LIB_FLAGS +=
#
OCamlProgram( $(DEFAULT_PROGRAM), $(DEFAULT_FILES))
.DEFAULT: $(if $(BYTE_ENABLED), $(DEFAULT_PROGRAM).run) \
          $(if $(NATIVE_ENABLED), $(DEFAULT_PROGRAM).opt)
	
section
	OCAMLPACKS[] =
		$(OCAMLPACKS)
		oUnit

	OCamlProgram( $(UNIT_PROGRAM), $(UNIT_FILES))

	.PHONY: unit 
	unit: $(UNIT_PROGRAM)

.PHONY: clean
clean:
  rm -f \
     $(filter-proper-targets $(glob $(addsuffix .*, $(DEFAULT_FILES)))) \
     $(DEFAULT_PROGRAM).run $(DEFAULT_PROGRAM).opt


.PHONY: clean_unit
clean_unit:
  rm -f \
     $(filter-proper-targets $(glob $(addsuffix .*, $(DEFAULT_FILES)))) \
     $(UNIT_PROGRAM).run $(UNIT_PROGRAM).opt
