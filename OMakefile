# and .mly files.
#

GENFILES[] = 
	parser.ml parser.mli 
	lexer.ml xmlParser.ml 
	xmlParser.mli xmlLexer.ml 
	jsonparse.ml jsonparse.mli 
	jsonlex.ml
OCamlGeneratedFiles($(GENFILES))

